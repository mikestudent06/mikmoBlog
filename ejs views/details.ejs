<%- include("./partials/headIndex") %>
<body>
  <style>
    /* Reset default styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    /* Set default font and color */
    body {
      font-family: sans-serif;
      font-size: 16px;
      line-height: 1.5;
      color: #333;
    }

    /* Style the header and navigation */
    header {
      background-color: #eee;
      padding: 1rem;
    }

    .site-title {
      display: flex;
      align-items: center;
      font-size: 2rem;
    }

    /* Style main content */
    main {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 30px;
      align-items: center;
    }

    .blog-details {
      margin-top: 2rem;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .blog-details h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
      color: #000;
      transition: all 0.3s ease-in-out;
    }

    .blog-details h1:hover {
      color: #ffcd00;
    }

    .blog-details .author {
      margin-bottom: 1rem;
      color: #666;
    }

    .blog-details .content {
      margin-bottom: 2rem;
    }

    .blog-details .content p {
      margin-bottom: 1rem;
    }

    .blog-details .content img {
      max-width: 100%;
      height: auto;
      margin-bottom: 1rem;
    }

    .blog-details .content a {
      color: #ffcd00;
      text-decoration: underline;
    }

    .blog-details .back-link {
      display: block;
      margin-top: 1rem;
      color: #333;
      text-decoration: none;
      transition: all 0.3s ease-in-out;
    }

    .blog-details .back-link:hover {
      color: #ffcd00;
    }
    a.delete {
      background-color: black;
      color: white;
      padding: 5px 10px;
      text-align: center;
      text-decoration: none;
      border-radius: 5px;
      width: 80px;
    }
    
    a.delete:hover {
      cursor: pointer;
      background-color: red;
    }
    

  </style>
  <header>
    <!-- Let's include the nav through ejs -->
    <%- include("./partials/nav") %>
  </header>
  <main>
    <section class="blog-details">
      <h1><%= blog.title %></h1>
      <p class="author">By <%= blog.author %></p>
      <div class="content">
        <%= blog.content %>
      </div>
      <a href="/blogs" class="back-link">‚Üê Back to All Blogs</a>
    </section>
    <a class="delete" data-doc="<%= blog._id %>">delete</a>
  </main>

  <script>
    const bin = document.querySelector("a.delete");
    bin.addEventListener('click', (e) => {
      const endpoint = `/blogs/${bin.dataset.doc}`;

      fetch(endpoint, {
        method : 'DELETE'   
      })
      .then((response /*from the app.delete*/) => {
        response.json()
        .then((data) => {
          <!-- console.log(data) -->
          window.location.href = data.redirect
        })
      })
      .catch((err) => {
        console.log(err)
      })

    })
  </script>
</body>
    <%- include("./partials/footer") %>
</html>
