  <%- include("./partials/headIndex")  %>
  <body>
    
    <style>
      /* Reset default styles */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      /* Set default font and color */
      body {
        font-family: sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: #333;
      }

      /* Style the header and navigation */
      header {
        background-color: #eee;
        padding: 1rem;
      }

      .site-title {
        display: flex;
        align-items: center;
        font-size: 2rem;
      }
      
      a {
        color: #000; /* black link color */
        text-decoration: none; /* remove underline */
        position: relative; /* set position to relative */
      }
      
      a:hover {
        color: #594e23; /* yellow link color on hover */
      }
      
      a:before, a:after {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: 0;
        background-color: #7c7c7c; /* black line color */
        visibility: hidden;
        transform: scaleX(0);
        transition: all 0.2s ease-in-out 0s;
      }
      
      a:before {
        left: 0;
      }
      
      a:after {
        right: 0;
      }
      
      a:hover:before, a:hover:after {
        visibility: visible;
        transform: scaleX(1);
      }
      
      
      /* Style main content */
      main {
        padding: 1rem;
      }
      
      .blogs-content {
        margin-top: 2rem;
      }
      
      .blogs-content h1 {
        font-size: 2rem;
        text-align: center;
        color: #000;
        transition: all 0.3s ease-in-out;
      }
      
      .blogs-content h1:hover {
        color: #ffcd00;
      }
      
    </style>
    <header>
        <!-- Let's innclude the nav trough ejs -->
        <%- include("./partials/nav") %>
    </header>
    <main>
      <section class="blogs-content">
        <h1>All Blogs</h1>
        <!-- Let's add the blogs -->
        <% if(blogs.length > 0) { %>
            <% blogs.forEach( blog => { %>
              <a href="/blogs/<%= blog._id %>" class="single">
                <h2><%= blog.title %></h2>
                <span style="text-align: center"><%= blog.author %></span>
                <p><%= blog.content %></p>
              </a>
            <% }) %>
        <% } else { %>
            <h2>
                Sorry, there's no blogs to display
            </h2>             
            <% } %>
    
      </section>
     
    </main>
  </body>
  <%- include("./partials/footer") %>
</html>
